#include <iostream>

using namespace std;

int podzielniki(int num)
    {
    for (int i=2;i<num;i++)
        {return (num%i)?NULL:i;}
    }
int a;
char t;
int main() {
do  {
    cout<<"liczba: ";
    cin>> a;
    cout<<podzielniki(a);
    cout<<endl;
    cout<<"Koniec? t/n"<<endl;
    cin>>t;
    }
    while(t!='t');
}

